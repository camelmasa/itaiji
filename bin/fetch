#! /usr/bin/env ruby

require 'yaml'
require 'itaiji/fetcher'

fetcher = Itaiji::Fetcher.new
itaiji_sets = fetcher.fetch.to_h.map do |itaiji_set|
  hash = {}
  hash[itaiji_set.seijitai] = itaiji_set.itaijis
  hash
end

itaiji_file_path = File.expand_path('../../source/itaji_list.yml', __FILE__)
File.write(itaiji_file_path, itaiji_sets.to_yaml)
